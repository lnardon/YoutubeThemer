{
  "manifest_version": 3,
  "name": "Youtube Themer",
  "description": "Create your own themes for Youtube!",
  "version": "0.1",
  "permissions": ["scripting", "storage", "activeTab", "tabs"],
  "background": {
    "service_worker": "./background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Youtube Themer",
    "default_icon": "./logo.png"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
